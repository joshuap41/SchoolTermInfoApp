<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchoolTermInfoApp.View.CoursePage">

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="Home"
            Clicked="HomeToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Course Details"
                   FontSize="Title"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />

            <TableView>
                <TableSection>

                    <ViewCell>
                        <StackLayout Orientation="Horizontal" VerticalOptions="Center" Padding="10,10,10,10">
                            <Label Text="Course Name:  "
                                   FontAttributes="Bold"
                                   FontSize="Medium"/>
                            <Label x:Name="courseName"
                                   Padding="0,3,0,0"/>
                        </StackLayout>
                    </ViewCell>

                    <ViewCell>
                        <StackLayout Orientation="Horizontal" VerticalOptions="Center" Padding="10,10,10,10">
                            <Label Text="Mentor Name:  "
                                   FontAttributes="Bold"
                                   FontSize="Medium"/>
                            <Label x:Name="mentorName"
                                   Padding="0,3,0,0"/>
                        </StackLayout>
                    </ViewCell>

                    <ViewCell>
                        <StackLayout Orientation="Horizontal" VerticalOptions="Center" Padding="10,10,10,10">
                            <Label Text="Mentor Phone Number:  "
                                   FontAttributes="Bold"
                                   FontSize="Medium"/>
                            <Label x:Name="mentorPhoneNumber"
                                   Padding="0,3,0,0"
                                   />
                        </StackLayout>
                    </ViewCell>

                    <ViewCell>
                        <StackLayout Orientation="Horizontal" VerticalOptions="Center" Padding="10,10,10,10">
                            <Label Text="Mentor Email:  "
                                   FontAttributes="Bold"
                                   FontSize="Medium"/>
                            <Label x:Name="mentorEmail"
                                   VerticalOptions="Center"
                                   Padding="0,3,0,0"/>
                        </StackLayout>
                    </ViewCell>

                    <ViewCell>
                        <StackLayout Orientation="Horizontal" VerticalOptions="Center" Padding="10,10,10,10">
                            <Label Text="Course Status:  "
                                   FontAttributes="Bold"
                                   FontSize="Medium"/>
                            <Label x:Name="courseStatus"
                                   Padding="0,3,0,0"/>
                        </StackLayout>
                    </ViewCell>

                    <ViewCell>
                        <StackLayout Orientation="Horizontal" VerticalOptions="Center" Padding="10,10,10,10">
                            <Label Text="Start Date:  "
                                   FontAttributes="Bold"
                                   FontSize="Medium"/>
                            <Label x:Name="startDate"
                                   Padding="0,3,0,0"/>
                        </StackLayout>
                    </ViewCell>

                    <ViewCell>
                        <StackLayout Orientation="Horizontal" VerticalOptions="Center" Padding="10,10,10,10">
                            <Label Text="Finish Date:  "
                                   FontAttributes="Bold"
                                   FontSize="Medium"/>
                            <Label x:Name="finishDate"
                                   Padding="0,3,0,0"/>
                        </StackLayout>
                    </ViewCell>

                    <ViewCell>
                        <StackLayout Orientation="Horizontal" VerticalOptions="Center" Padding="10,10,10,10">
                            <Label Text="Course Notes:  "
                                   FontAttributes="Bold"
                                   FontSize="Medium"/>
                            <Label x:Name="courseNotes"
                                   Padding="0,3,0,0"/>
                        </StackLayout>
                    </ViewCell>


                    <!--Need to add Notifications here somehow-->

                </TableSection>
            </TableView>

            <StackLayout>

            <Button x:Name="requiredAssessments"
                    Margin="0, 0, 0, 0"
                    HeightRequest="35"
                    Text="Required Assessments"
                    Clicked="RequiredAssessments_Clicked"
                    BackgroundColor="{StaticResource blueColorForButton}"
                    TextColor="{StaticResource white}"/>

            <Button x:Name="editCourse"
                    Margin="0, 0, 0, 0"
                    HeightRequest="35"
                    Text="Edit Course"
                    Clicked="EditCourse_Clicked"
                    BackgroundColor="{StaticResource blueColorForButton}"
                    TextColor="{StaticResource white}"/>

            <Button x:Name="deleteCourse"
                    Margin="0, 0, 0, 20"
                    HeightRequest="35"
                    Text="Delete Course"
                    Clicked="DeleteCourse_Clicked"
                    BackgroundColor="{StaticResource blueColorForButton}"
                    TextColor="{StaticResource white}"/>
        </StackLayout>
        </StackLayout>


    </ContentPage.Content>
</ContentPage>
